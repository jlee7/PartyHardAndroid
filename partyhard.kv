<GameScreen>
    game: party_hard_game

    PartyHardGame
        id: party_hard_game

<EndScreen>
    displayed_points: label_points
    
    BoxLayout:
        Image:
            source: "assets/End-Screen-app.png"

    BoxLayout:
        size_hint: 1, 0.2
        orientation: "vertical"

        BoxLayout:
            orientation: "horizontal"
            
            Label:
                id: label_points
                text: 
                font_size: self.parent.height / 2
                font_name: "assets/KOMIKAX.ttf"

        BoxLayout:
            orientation: "horizontal"
            
            Button:
                size_hint: 0.7, 1
                text: "RESTART"
                font_name: "assets/KOMIKAX.ttf"
                on_release: root.manager.current = "start_screen"

            Button:
                size_hint: 0.7, 1
                text: "CREDITS"
                font_name: "assets/KOMIKAX.ttf"
                on_release: root.manager.current = "credits"

<CreditScreen>
    BoxLayout:
        Image:
            source: "assets/bg-2.jpg"

    BoxLayout:
        size_hint: 1, 0.2
        orientation: "vertical"

        BoxLayout:
            orientation: "horizontal"
            
            Label:
                id: credittext
                text: "Manoo, Perelin & jlee7"
                font_size: self.parent.height / 2
                font_name: "assets/KOMIKAX.ttf"

        BoxLayout:
            orientation: "horizontal"
            
            Button:
                size_hint: 0.7, 1
                text: "HOME"
                font_name: "assets/KOMIKAX.ttf"
                on_release: root.manager.current = "start_screen"