<PartyHardGame>
    dude: party_dude
    displayed_mode: label_mode
    displayed_time: label_time
    displayed_score: label_score
    
    canvas:
        Rectangle:
            source: "assets/bg-1.jpg"
            pos: self.pos
            size: self.size

    PartyDude:
        id: party_dude
        text: "Dude"
        pos: ((self.parent.width / 2) - (self.width / 2), 0)
        size: (self.parent.height / 5, self.parent.height / 5)
        
    ScoreBoard:
        Label:
            id: label_mode
            text: "PartyTime"
            font_name: "assets/KOMIKAX.ttf"
            font_size: self.parent.height / 2
        Label:
            id: label_time
            text: "30"
            font_name: "assets/KOMIKAX.ttf"
            font_size: self.parent.height / 2
        Label:
            id: label_score
            text: "0"
            font_name: "assets/KOMIKAX.ttf"
            font_size: self.parent.height / 2

<PartyDude>:
    #size: 100, 100
    canvas:
        Rectangle:
            source: "assets/party-dude.png"
            pos: self.pos
            size: self.size

<RandomItem>:
    #size: 50, 50
    canvas:
        Rectangle:
            source: "assets/item-cocktail_green.png"
            pos: self.pos
            size: self.size

<ScoreBoard@BoxLayout>:
    size: self.parent.width, self.parent.height / 10
    pos: 0, self.parent.height - self.height


<StartScreen>
    BoxLayout:
        Image:
            source: "assets/Splash-Screen-app.png"

    BoxLayout:
        size_hint: 1, 0.3
        orientation: "vertical"

        BoxLayout:
            orientation: "horizontal"
            
            Button:
                size_hint: 0.7, 1
                text: "START"
                font_name: "assets/KOMIKAX.ttf"
                font_size: self.parent.height / 2
                on_release: root.manager.current = "game_screen"
            
        
